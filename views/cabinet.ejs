<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>IAS 密碼櫃</title>  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/styles.css" rel="stylesheet">
</head>
<body>

  <div class="cabinet">
    <h2 class="text-center mb-4">IAS 密碼櫃</h2>

    <div class="accordion" id="cabinetAccordion">
      <!-- Drawer loop -->
      <%
        const romanNumerals = ['', 'I', 'II', 'III', 'IV', 'V', 'VI', 'VII', 'VIII', 'IX', 'X', 'XI', 'XII'];
      %>
      <% for(let i = 1; i <= 12; i++) { %>
        <div class="accordion-item">
          <h2 class="accordion-header" id="heading<%= i %>">
            <button class="accordion-button collapsed" type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapse<%= i %>"
              aria-expanded="false"
              aria-controls="collapse<%= i %>">              <%= romanNumerals[i] %>
              <% if (i === 1) { %>
                <span class="unlock-icon">🔓</span>
              <% } else if (i === 2) { %>
                <span class="lock-icon">🔒</span>
              <% } %>
            </button>
          </h2>          <div id="collapse<%= i %>" class="accordion-collapse collapse"
            aria-labelledby="heading<%= i %>" data-bs-parent="#cabinetAccordion">
            <div class="accordion-body">
              <div class="disk-slot">[ Disk 插槽 ]</div>
              <div>[ 資料顯示區 / 操作空間（未來填）]</div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/cabinet.js"></script>
</body>
</html>
